<UserControl x:Class="Sample_Content_Plugin.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sample_Content_Plugin"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Margin="0,0,0,5">Enter some text:</TextBlock>
            <TextBox x:Name="tbSomeText" Padding="2" />
            <CheckBox x:Name="cbAnimateBackground" Content="Animate Background?" Margin="0,10,0,5" />
        </StackPanel>
    </Grid>
</UserControl>
